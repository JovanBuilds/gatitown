---
import Layout from "../../layouts/Layout.astro";
import LoginForm from "../../components/auth/LoginForm";

// If already logged in, redirect to admin
if (Astro.locals.user) {
    return Astro.redirect("/admin");
}
---

<Layout title="Iniciar sesión - GatiTown">
    <div
        class="min-h-screen bg-[#FFF4EA] flex items-center justify-center px-6 py-20"
    >
        <div class="bg-white p-8 md:p-12 rounded-3xl shadow-lg max-w-md w-full">
            <h1
                class="text-3xl md:text-4xl font-bold text-[#9A7B6A] mb-3 text-center"
            >
                Panel de administración
            </h1>
            <p class="text-gray-600 mb-8 text-center">
                Ingresa con tu cuenta de administrador para gestionar los
                gatitos y sus adopciones.
            </p>

            <LoginForm client:load />
        </div>
    </div>
</Layout>
